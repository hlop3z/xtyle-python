{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Custom */
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",

    /* Custom */
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": false,
    "jsx": "react",
    "jsxFactory": "h"
  },
  "include": ["globals.d.ts", "src/**/*.tsx", "src/**/*.ts"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
